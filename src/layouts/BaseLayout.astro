---
import '../styles/vars.css';

import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import GlobalStyles from '../components/GlobalStyles.astro';
import App from '../components/App.astro';

const pathname = new URL(Astro.request.url).pathname;
const { pageTitle, pageCover, pageDescription } = Astro.props;

const title = pathname !== '/' ? `${pageTitle} | O░V░E░R░F░L░O░W` : pageTitle;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>{title}</title>

    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Onest:wght@100..900&display=swap"
    />

    <meta name="description" content={pageDescription ?? 'LATE - POST - ULTRA'} />

    <meta property="og:url" content="https://overflow.gallery" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={pageDescription ?? 'LATE - POST - ULTRA'} />
    <meta
      property="og:image"
      content={pageCover ? pageCover.src : 'https://overflow.gallery/assets/og.jpg'}
    />
    <meta
      property="og:image:url"
      content={pageCover ? pageCover.src : 'https://overflow.gallery/assets/og.jpg'}
    />
    <meta
      property="twitter:image"
      content={pageCover ? pageCover.src : 'https://overflow.gallery/assets/og.jpg'}
    />

    <GlobalStyles />
  </head>
  <body>
    <Header />
    <App>
      <slot />
    </App>
    <Footer />
  </body>
</html>
