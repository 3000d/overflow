---
const { large, full, type, ...props } = Astro.props;

const Element = type === 'submit' ? 'button' : 'a';
---

<style lang="scss">
  .button {
    text-transform: uppercase;
    background-color: var(--color-bg-accent);
    border: none;
    cursor: pointer;
    color: var(--color-text-inverse);
    text-decoration: none;
    letter-spacing: 0.1em;
    font-size: var(--typography-fontsize-m);
    padding: var(--spacing-xs) var(--spacing-s);
    display: inline-block;
    text-align: center;

    &.is-full {
      width: 100%;
    }

    &.is-large {
      padding: var(--spacing-s) var(--spacing-m);
    }
  }
</style>

<Element class:list={['button', { 'is-large': large }, { 'is-full': full }]} type={type} {...props}>
  <slot />
</Element>
