---
import { Content as IntroContent } from '../content/intro.md';
import background from '../assets/intro-bg.png';
import Button from './Button.astro';
---

<style lang="scss" define:vars={{ backgroundUrl: `url(${background.src})` }}>
  @use '../styles/mq';

  .intro {
    background: var(--backgroundUrl) no-repeat top left;
    background-size: cover;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-m);
    padding-top: var(--spacing-l);
    padding-bottom: var(--spacing-l);
    line-height: 1.75;

    // compensate margin on main container
    margin-top: calc(var(--header-bottom-margin) * -1);

    @include mq.desktop {
      font-size: var(--typography-fontsize-l);
      padding-top: var(--spacing-xl);
      padding-bottom: var(--spacing-xl);
    }
  }

  .content {
    @include mq.desktop {
      width: 75%;
    }

    :global(p) {
      background-color: var(--color-bg-base);
      letter-spacing: 0.1em;
      display: inline;
      text-transform: uppercase;
    }
  }
</style>

<section class="intro with-spacing">
  <div class="content">
    <IntroContent />
  </div>
  <p>
    <Button href="/visit" title="Learn more about us">Learn more</Button>
  </p>
</section>
